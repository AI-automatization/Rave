{
  "name": "cinesync-mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "react": "19.2.4",
    "react-native": "0.84.1",
    "@react-navigation/native": "^7.1.31",
    "@react-navigation/native-stack": "^7.14.2",
    "@react-navigation/bottom-tabs": "^7.15.2",
    "react-native-screens": "^4.24.0",
    "react-native-safe-area-context": "^5.7.0",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-reanimated": "^4.2.2",
    "zustand": "^5.0.11",
    "@tanstack/react-query": "^5.90.21",
    "axios": "^1.13.6",
    "socket.io-client": "^4.8.3",
    "@react-native-async-storage/async-storage": "^3.0.1",
    "react-native-mmkv": "^4.1.2",
    "react-native-video": "^6.19.0",
    "react-native-fast-image": "^8.6.3",
    "@react-native-firebase/app": "^23.8.6",
    "@react-native-firebase/messaging": "^23.8.6",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-vector-icons": "^10.3.0",
    "@react-native-community/netinfo": "^12.0.1",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-permissions": "^5.4.4",
    "react-native-splash-screen": "^3.3.0",
    "react-native-device-info": "^15.0.2",
    "react-native-skeleton-placeholder": "^5.2.4",
    "@react-native-google-signin/google-signin": "^16.1.1",
    "react-native-toast-message": "^2.3.3",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^5.0.2",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/runtime": "^7.28.6",
    "@react-native/babel-preset": "0.84.1",
    "@react-native/eslint-config": "0.84.1",
    "@react-native/metro-config": "0.84.1",
    "@react-native/typescript-config": "0.84.1",
    "@types/react": "^19.2.14",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-native-video": "^5.0.21",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "@testing-library/react-native": "^13.3.3",
    "@testing-library/jest-native": "^5.4.3",
    "typescript": "5.9.3",
    "detox": "^20.47.0",
    "@react-native-community/cli": "^18.0.0",
    "@react-native-community/cli-platform-android": "^18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-fast-image|react-native-linear-gradient|react-native-safe-area-context|react-native-mmkv|react-native-toast-message|react-native-gesture-handler|react-native-reanimated|@tanstack)/)"
    ],
    "moduleNameMapper": {
      "^@screens/(.*)$": "<rootDir>/src/screens/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@api/(.*)$": "<rootDir>/src/api/$1",
      "^@store/(.*)$": "<rootDir>/src/store/$1",
      "^@socket/(.*)$": "<rootDir>/src/socket/$1",
      "^@theme/(.*)$": "<rootDir>/src/theme/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@types/(.*)$": "<rootDir>/src/types/$1",
      "^@navigation/(.*)$": "<rootDir>/src/navigation/$1",
      "^@hooks/(.*)$": "<rootDir>/src/hooks/$1"
    },
    "collectCoverageFrom": [
      "src/components/**/*.tsx",
      "src/utils/**/*.ts",
      "src/hooks/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
